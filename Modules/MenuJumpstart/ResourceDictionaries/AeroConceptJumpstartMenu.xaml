                                            <Path.Data>
                                                <PathGeometry Figures="m 5.777285 233.05797 -3.308827 9.89786 c -5.40734 -5.93137 -12.48399 -5.50817 -19.06766 -0.32468 l 3.46646 -9.57318 z" FillRule="NonZero"/>
