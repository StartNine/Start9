                                            <Path.Data>
                                                <PathGeometry Figures="m 18.586035 260.81193 3.80217 -13.08874 c -7.35609 2.70011 -13.70425 3.06233 -18.7855 -1.17108 l -4.652237 14.25982 z" FillRule="NonZero"/>
