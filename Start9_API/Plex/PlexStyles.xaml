                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Border x:Name="PressedBackground" BorderThickness="1" CornerRadius="3" Margin="0" Padding="0"
                                Visibility="Visible" Opacity="0" BorderBrush="#FF425284">
