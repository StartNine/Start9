                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Border>
                        </Border>
                        <Border x:Name="HoverBackground" BorderThickness="1" CornerRadius="1" Margin="3,2,3,3"
                                Padding="0" Opacity="0" Background="Transparent">
