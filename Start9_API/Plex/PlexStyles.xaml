                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                                 Path="HorizontalOffset" />
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                                 Path="ExtentWidth" />
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                                 Path="ViewportWidth" />
                                                    </MultiBinding>
                                                </RepeatButton.Visibility-->
                                                <Path Fill="Black" Stretch="Fill"
                                                      Stroke="{x:Null}" StrokeThickness="0"
